<!DOCTYPE html>
<html>
  <head>
    <title>MyHealthClient</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <a href="/client/signup">Sign Up</a>
    <a href="/client/login">Log In</a>
    <a href="/client/logout" data-method="delete">Log Out</a>
    <div>
      <%= @jwt %>
    </div>
    <div>
      <% flash.each do |name, message| %>
        <%= message %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
